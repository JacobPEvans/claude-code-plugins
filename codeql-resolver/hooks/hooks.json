{
  "hooks": [
    {
      "event": "UserMessage",
      "description": "Provide CodeQL resolution recommendations in user messages",
      "handler": "scripts/codeql-resolver.py",
      "conditions": [
        "message contains 'CodeQL'",
        "message contains 'codeql'",
        "message contains 'code scanning'",
        "message contains 'workflow permissions'"
      ]
    }
  ]
}
